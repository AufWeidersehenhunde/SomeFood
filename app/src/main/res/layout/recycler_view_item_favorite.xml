<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:background="@drawable/for_back_white"
    android:clipToPadding="false">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:backgroundTint="@color/my"
        android:elevation="8dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="11dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/nameFood"
            android:layout_width="160dp"
            android:layout_height="45dp"
            android:layout_marginStart="180dp"
            android:gravity="top"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/descriptionFood"
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:layout_marginStart="180dp"
            android:gravity="center"
            android:layout_marginTop="70dp"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/creatorFood"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_marginStart="180dp"
            android:gravity="bottom"
            android:text="creator is not founded yet"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="165dp"
            android:textSize="14sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:id="@+id/btnAddToFavourite"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end|top"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="@color/mocha"
            android:elevation="4dp"
            app:cardCornerRadius="80dp"
            app:cardElevation="8dp">

            <ImageView
                android:id="@+id/viewBtnAddToFavourite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_star_24" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/timer"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:layout_gravity="end|center"
            android:layout_marginRight="5dp"
            android:backgroundTint="@color/blue"
            android:elevation="4dp"
            app:cardCornerRadius="80dp"
            app:cardElevation="8dp">

            <TextView
                android:id="@+id/timer2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="10"
                />
            <TextView
                android:id="@+id/timer3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:text="30"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="5dp"
                android:src="@drawable/ic_baseline_access_time_24"
                />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnDone"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end|bottom"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="@color/mocha"
            android:elevation="4dp"
            app:cardCornerRadius="80dp"
            app:cardElevation="8dp">

            <ImageView
                android:layout_width="31dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_done_24" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_gravity="start"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/mocha"
            android:elevation="15dp"
            android:translationZ="1dp"
            app:cardCornerRadius="80dp"
            app:cardElevation="20dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageViewFavorite"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                app:civ_border_color="@color/white"
                app:civ_border_width="2dp" />
        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>